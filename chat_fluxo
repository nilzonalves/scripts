#!/bin/bash

#verifica se o script foi executado sem parâmetro
if [ -z "$1" ]; then
    read -p "Informe os 5 ultimos digitos do protocolo: " var
else
    # Usa o parâmetro passado
    var="$1"
fi

# Captura o dia/quantidade para voltar à data desejada
read -p "Informe o número de dias anteriores [data]: " dias

# Define o caminho do arquivo de log com base no número de dias
if [ "$dias" -eq 0 ]; then
    log_file="/var/log/asterisk/ffpainel_chat.log"
elif [ "$dias" -eq 1 ]; then
    log_file="/var/log/asterisk/ffpainel_chat.log.1"
else
    log_file="/var/log/asterisk/ffpainel_chat.log.$dias.zst"
fi

# Verifica se o arquivo de log existe
if [ ! -f "$log_file" ]; then
    echo "Arquivo de log não encontrado: $log_file"
    exit 1
fi

# Lê o arquivo de log e aplica o filtro necessário
if [[ "$dias" -eq 0 || "$dias" -eq 1 ]]; then
    # Log não compactado
    grep -iE "$var" "$log_file" | grep -oP "(Processando o contexto '.*?'|Tomada de decisão: .*?$|Menu: .*?$)" || echo "Nenhuma correspondência encontrada para: $var"
else
    # Log compactado (.zst)
    zstdcat "$log_file" | grep -iE "$var" | grep -oP "(Processando o contexto '.*?'|Tomada de decisão: .*?$|Menu: .*?$)" || echo "Nenhuma correspondência encontrada para: $var"
